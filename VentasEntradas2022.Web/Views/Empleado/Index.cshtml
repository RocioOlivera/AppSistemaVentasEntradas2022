@model List<VentasEntradas2022.Entidades.Entidades.Empleado>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
    <li class="breadcrumb-item active">Empleados</li>
</ol>
<div class="card">

    <h5 class="card-header bg-primary text-white">
        <i class="fas fa-bookmark"></i>
        Listado de Empleados

    </h5>
    <div class="card-body">
        <a href="@Url.Action("Create", "Empleado")" class="btn btn-primary">Crear Nuevo</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Apellido y Nombre</th>
                    <th>Tipo de Doc.</th>
                    <th>Num. de Doc.</th>
                    <th>Telefono Fijo</th>
                    <th>Telefono Móvil</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td>
                            No hay registros todavía
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var empleado in Model)
                    {
            <tr>
                <td>@Html.DisplayFor(modelItem => empleado.ApellidoYNombres)</td>
                <td>@Html.DisplayFor(modelItem => empleado.TipoDeDocumento)</td>
                <td>@Html.DisplayFor(modelItem => empleado.NroDocumento)</td>
                <td>@Html.DisplayFor(modelItem => empleado.TelefonoFijo)</td>
                <td>@Html.DisplayFor(modelItem => empleado.TelefonoMovil)</td>
                <td>@Html.DisplayFor(modelItem => empleado.CorreoElectronico)</td>
                <td>@Html.DisplayFor(modelItem => empleado.Activo)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = empleado.EmpleadoId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Borrar", "Delete", new { id = empleado.EmpleadoId }, new { @class = "btn btn-danger" })

                </td>
            </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong>
    </div>
</div>



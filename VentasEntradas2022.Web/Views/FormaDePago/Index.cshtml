@model List<VentasEntradas2022.Entidades.Entidades.FormaDePago>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
    <li class="breadcrumb-item active">Formas de Pago</li>
</ol>
<div class="card">

    <h5 class="card-header bg-primary text-white">
        <i class="fas fa-bookmark"></i>
        Listado de Formas de Pago

    </h5>
    <div class="card-body">
        <a href="@Url.Action("Create", "FormaDePago")" class="btn btn-primary">Crear Nueva</a>
        <hr/>
        <table class="table">
            <thead>
            <tr>
                <th>Forma De Pago</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td>
                        No hay registros todavía
                    </td>
                </tr>
            }
            else
            {
                foreach (var formaDePago in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => formaDePago.Descripcion)</td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new {id = formaDePago.FormaDePagoId}, new {@class = "btn btn-warning"})
                            @Html.ActionLink("Borrar", "Delete", new { id = formaDePago.FormaDePagoId }, new {@class = "btn btn-danger"})

                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong>
    </div>
</div>



@using VentasEntradas2022.Entidades.Entidades
@model List<VentasEntradas2022.Entidades.Entidades.FormaDeVenta>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
    <li class="breadcrumb-item active">Formas de Venta</li>
</ol>
<div class="card">

    <h5 class="card-header bg-primary text-white">
        <i class="fas fa-bookmark"></i>
        Listado de Formas de Venta

    </h5>
    <div class="card-body">
        <a href="@Url.Action("Create", "FormaDeVenta")" class="btn btn-primary">Crear Nueva</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Forma De Venta</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td>
                            No hay registros todavía
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var formaDeVenta in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => formaDeVenta.Descripcion)</td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = formaDeVenta.FormaDeVentaId }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Borrar", "Delete", new { id = formaDeVenta.FormaDeVentaId }, new { @class = "btn btn-danger" })

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong>
    </div>
</div>


